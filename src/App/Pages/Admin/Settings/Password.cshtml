@page
@model App.Pages.Admin.Settings.PasswordModel
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["password"];
}
<div class="bf-main">
    <partial name="~/Pages/Admin/Settings/_Taskbar.cshtml" />
    <div class="bf-body">
        <form method="post" asp-antiforgery="true">
            <div class="bf-content bf-content-boxed bf-settings">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="ChangePasswordModel.UserName" />
                <div class="form-group">
                    <label class="form-group-label">@Localizer["password"]</label>
                    <input asp-for="ChangePasswordModel.OldPassword" class="form-control" autofocus />
                </div>
                <div class="form-group">
                    <label class="form-group-label">@Localizer["new-password"]</label>
                    <input asp-for="ChangePasswordModel.NewPassword" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="form-group-label">@Localizer["confirm-password"]</label>
                    <input asp-for="ChangePasswordModel.ConfirmPassword" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary btn-main">@Localizer["save"]</button>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    @Html.Raw(Model.RenderMessage())
}