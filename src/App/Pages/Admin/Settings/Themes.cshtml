@page
@model App.Pages.Admin.Settings.ThemesModel
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Themes";
    var show = "show";
}
<style>
    .btn-link {
        color: #666;
    }
</style>
<div class="bf-main">
    <partial name="~/Pages/Admin/Settings/_Taskbar.cshtml" />
    <div class="bf-body">
        <!-- Grid -->
        <div class="bf-posts-grid d-flex" aria-label="posts">
            @foreach (var theme in Model.Themes)
            {
                var img = $"{Url.Content("~/")}{theme.Cover}";
                var lnkSet = $"{Url.Content("~/admin/settings/themes")}?id={theme.Title}&act=set";
                var lnkDel = $"{Url.Content("~/admin/settings/themes")}?id={theme.Title}&act=del";
                <div class="post-grid-col">
                    <div class="post-grid-item">
                        <a class="item-link" style="background-image:url(@img);"><div class="item-title mt-auto">&nbsp;</div></a>
                        <div class="item-info d-flex align-items-center">
                            <span class="item-date mr-auto">@theme.Title</span>
                            @if (theme.IsCurrent)
                            {
                                <a class="btn-unstyled item-favorite ml-3" data-tooltip="" title="" data-original-title="@Localizer["selected"]">
                                    <i class="fas fa-star"></i>
                                </a>
                                @if (Model.Widgets != null && Model.Widgets.Count > 0)
                                {
                                    <a class="item-show ml-3" href="#" onclick="return openSettings('@theme.Title')" data-tooltip="" title="" data-original-title="@Localizer["settings"]">
                                        <i class="fas fa-sliders-h"></i>
                                    </a>
                                }
                            }
                            else
                            {
                                <button class="btn-unstyled item-favorite ml-3" onclick="submitForm('@theme.Title', 'set')" data-tooltip="" title="" data-original-title="@Localizer["select"]">
                                    <i class="far fa-star"></i>
                                </button>
                                <a class="item-show ml-4" href="" onclick="submitForm('@theme.Title', 'del'); return false" data-tooltip="" title="" data-original-title="@Localizer["delete"]">
                                    <i class="fas fa-trash" style="color: #ff6666"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
        <!--/Grid -->
        <form id="frmThemes" method="post" asp-antiforgery="true">
            <input type="hidden" id="hdnTheme" name="hdnTheme" />
            <input type="hidden" id="hdnAct" name="hdnAct" />
        </form>
    </div>
</div>

<div class="modal fade" id="themeSettings" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="hdrSettings"></h4>
                <button type="button" class="close ml-2" title="Close" data-placement="bottom" data-tooltip data-dismiss="modal" aria-label="@Localizer["close"]">
                    <i class="fa fa-times"></i>
                </button>
            </div>
            <div class="modal-body">
                <div class="settings-body">
                    @if (Model.Widgets != null)
                    {
                        <div class="accordion" id="accordion-widgets">
                            @foreach (var widget in Model.Widgets)
                            {
                                var path = $"~/Views/Widgets/{widget.Widget}/Edit.cshtml";
                                <div class="card">
                                    <div class="card-header" id="heading-@widget.Widget">
                                        <h5 class="mb-0">
                                            <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapse-@widget.Widget" aria-expanded="false" aria-controls="collapse-@widget.Widget">
                                                @widget.Title
                                            </button>
                                        </h5>
                                    </div>
                                    <div id="collapse-@widget.Widget" class="collapse @show" aria-labelledby="heading-@widget.Widget" data-parent="#accordion-widgets">
                                        <div class="card-body">
                                            @{
                                                await Html.RenderPartialAsync(path, new ThemeWidget { Theme = Model.BlogItem.Theme, Widget = widget });
                                            }
                                        </div>
                                    </div>
                                </div>
                                show = "";
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @Html.Raw(Model.RenderMessage())
    <script>
        var submitForm = function (id, act) {
            $("#hdnTheme").val(id);
            $("#hdnAct").val(act);
            $('#frmThemes').submit();
        }
        var openSettings = function (id) {
            $('#hdrSettings').text('Theme: ' + id);
            $('#themeSettings').modal();
            return false;
        }
    </script>
}